<Page x:Class="Гибет41размер.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Гибет41размер"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage" FontFamily="Comic Sans MS">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Логин" FontSize="30" VerticalAlignment="Bottom" HorizontalAlignment="Center" ></TextBlock>
        <TextBlock Grid.Row="1" Text="Пароль" FontSize="30" VerticalAlignment="Bottom" HorizontalAlignment="Center" ></TextBlock>
        <TextBox Grid.Column="1" Width="250" Name="LogInTB"  FontSize="25" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Left"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="1" Name="PassTB"  FontSize="25" Width="250" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Left"></TextBox>
        <Button Grid.Column="0" Grid.Row="2" Name="LogInButtonGuest" Content="Войти как гость" Click="LogInButtonGuest_Click"></Button>
        <Button Grid.Column="1" Grid.Row="2" Name="LogInButton" Content="Войти" Click="LogInButton_Click" ></Button>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1">
            <TextBlock Name="captchOneWord" FontSize="22" Margin="30, 0, 0, 0"></TextBlock>
            <TextBlock Name="captchTwoWord" FontSize="22" TextDecorations="Strikethrough"></TextBlock>
            <TextBlock Name="captchThreeWord" FontSize="22" TextDecorations="Strikethrough"></TextBlock>
            <TextBlock Name="captchFourWord" FontSize="22" TextDecorations="Strikethrough"></TextBlock>
        </StackPanel>
        <TextBox Grid.Column="1" Grid.Row="2" Name="CaptchaTB" FontSize="20" Width="150" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,35,0,0" Visibility="Collapsed"
                 ToolTip="Введите каптчу"></TextBox>
        



    </Grid>
</Page>

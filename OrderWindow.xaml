<Window x:Class="Гибет41размер.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Гибет41размер"
        mc:Ignorable="d"
        Title="OrderWindow" Height="650" Width="1200" FontFamily="Comic Sans MS" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="459*"/>
            <ColumnDefinition Width="41*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Orientation="Vertical"  Grid.ColumnSpan="3">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Дата формирования заказа:" FontSize="20" VerticalAlignment="Center"></TextBlock>
                <DatePicker Name="OderDP" FontSize="20" VerticalAlignment="Center" Margin="10,5,0,5" IsEnabled="False"></DatePicker>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Дата доставки заказа:" FontSize="20" VerticalAlignment="Center" ></TextBlock>
                <DatePicker Name="OrderDeliveryDP" FontSize="20" Margin="10,0,0,0" IsEnabled="False"></DatePicker>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ФИО клиента:" FontSize="20"></TextBlock>
                <TextBlock Name="ClientTB" FontSize="20" Width="350" Height="30" VerticalAlignment="Center" Margin="10,0,0,0"></TextBlock>
            </StackPanel>
            <StackPanel  Orientation="Horizontal">
                <TextBlock Text="Номер заказа:" FontSize="20" HorizontalAlignment="Left"></TextBlock>
                <TextBlock Name="TBOrderID" FontSize="20" Width="200" Height="30" Margin="10,0,0,0"></TextBlock>
            </StackPanel>
        </StackPanel>

        <TextBlock Grid.Row="2" Text="Пункт выдачи" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"/>

        <ComboBox Grid.Column="1" Grid.Row="1" Height="40" Width="300" FontSize="20" Name="PickUpCombo" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,414,0,0" Grid.RowSpan="2">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding PickUpPointIndex}"></Label>
                        <Label Content="{Binding PickUpPointCity}"></Label>
                        <Label Content="{Binding PickUpPointStreet}"></Label>
                        <Label Content="{Binding PickUpPointFlat}"></Label>

                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="759,0,0,0" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Сумма заказа: " FontSize="18" HorizontalAlignment="Right"/>
                <TextBlock Name="TotalAmountTB" Text="0 рублей" FontSize="18"></TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Сумма скидки: " FontSize="18" HorizontalAlignment="Right"/>
                <TextBlock Name="DiscountAmountTB" Text="0 рублей" FontSize="18"></TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Итого к оплате: " FontSize="18" HorizontalAlignment="Right"/>
                <TextBlock Name="FinalAmountTB" Text="0 рублей" FontSize="18"></TextBlock>

            </StackPanel>
        </StackPanel>


        <Button Content="Сохранить" Grid.Row="2" VerticalAlignment="Bottom" Name="SaveButton" Click="SaveButton_Click" Grid.Column="1" Margin="312,0,430,5"/>

        <ListView Name="ShoeListView" SelectionChanged="ShoeListView_SelectionChanged" Grid.Row="1" Grid.ColumnSpan="3" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="750"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="250"/>

                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>

                        </Grid.RowDefinitions>
                        <Image Width="100" Grid.Column="0" Stretch="Uniform" HorizontalAlignment="Center" Grid.RowSpan="4">
                            <Image.Source>
                                <Binding Path = "ProductPhotoPath">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            Images/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="{Binding ProductName}" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" FontSize="20" FontWeight="Bold" TextWrapping="Wrap"></TextBlock>

                        <TextBlock Text="{Binding ProductDescription}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" FontSize="20" ></TextBlock>

                        <TextBlock Text="{Binding ProductManufacturer}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" FontSize="20" ></TextBlock>

                        <TextBlock Text="{Binding ProductCost, StringFormat={}{0} рублей}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" ></TextBlock>

                        <StackPanel Grid.Column="3" Grid.Row="0" Grid.RowSpan="4" Orientation="Vertical" VerticalAlignment="Center">
                            <TextBlock Text="Количество: " FontSize="16" HorizontalAlignment="Center"></TextBlock>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="-" HorizontalAlignment="Center" Width="30" Height="30" FontSize="20" Name="BtnMinus" Click="BtnMinus_Click" Tag="{Binding ProductArticleNumber}"></Button>
                                <TextBlock Name="QuantityText" Text="{Binding QuantityInOrder, FallbackValue=1}" FontSize="24" VerticalAlignment="Center" Width="50" TextAlignment="Center"/>
                                <Button Content="+" HorizontalAlignment="Center" Width="30" Height="30" FontSize="20" Name="BtnPlus" Click="BtnPlus_Click" Tag="{Binding ProductArticleNumber}"></Button>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Text="Скидка" Grid.Row="0" Grid.Column="2" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ProductDiscountAmount, StringFormat={}{0}%}" Grid.Row="1" Grid.RowSpan="3" Grid.Column="2" FontWeight="Bold" FontSize="30" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Window>
